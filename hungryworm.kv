#:kivy 2.0.0

<Sprite>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size

<WormBody>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size
            source: 'images/BodyNew.png'

<WormHead>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos 
            size: self.size
            source: 'images/Head.png'

    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: 0, 0, 1
            origin: self.center
    canvas.after:
        PopMatrix
         
<Apple>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size
            source: 'images/AppleNew.png'

<HungryWormGame>
    canvas:
        Color
            rgba: 1, 0, 0, self.alpha
        Rectangle
            pos: self.pos
            size: self.size
    
    Label:
        id: header
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, 9 * root.size[1] / 10.2
        text: 'Hungry Worm'
        font_size: 24

    Label:
        id: score
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, (9 * root.size[1] / 10.2) - 50
        text: 'Score: ' + str(root.score)
        font_size: 24


    Label:
        id: highscore
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, (9 * root.size[1] / 11) - 50
        text: 'High Score: ' + str(root.high_score)
        font_size: 24
