#:kivy 2.0.0

<Sprite>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [app.sprize_size] * 2
    pos: [x * app.sprize_size for x in self.coord]
    canvas:
        Color
            rgba:self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size
            source: 'images/BodyNew.png'

<WormHead>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [app.sprize_size] * 2
    pos: [x * app.sprize_size for x in self.coord]
    canvas:
        Color
            rgba:self.bgcolor
        Rectangle
            pos: self.pos 
            size: self.size
            source: app.image_source
            
<Apple>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [app.sprize_size] * 2
    pos: [x * app.sprize_size for x in self.coord]
    canvas:
        Color
            rgba:self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size
            source: 'images/AppleNew.png'

RelativeLayout:
    canvas:
        Color
            rgba: 1, 0, 0, app.alpha
        Rectangle
            pos: self.pos
            size: self.size
    
    Label:
        id: header
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, 9 * root.size[1] / 10.2
        text: 'Hungry Worm'
        font_size: 24

    Label:
        id: scoreboard
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, (9 * root.size[1] / 10.2) - 50
        text: 'Score: ' + str(app.score)
        font_size: 24
