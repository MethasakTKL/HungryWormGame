#:kivy 2.0.0

<Sprite>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [app.sprize_size] * 2
    pos: [x * app.sprize_size for x in self.coord]
    canvas:
        Color
            rgba:self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size

<WormHead>
    canvas:
        Rectangle
            pos: self.pos
            size: self.size
            source: "images/Head.png"

<WormBody>
    canvas:
        Rectangle
            pos: self.pos
            size: self.size
            source: "images/BodyNew.png"

<Apple>
    canvas:
        Rectangle
            pos: self.pos
            size: self.size
            source: "images/AppleNew.png"

RelativeLayout
    canvas:
        Color
            rgba:1, 0, 0, app.alpha
        Rectangle
            pos: self.pos
            size: self.size
            