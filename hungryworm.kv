#:kivy 2.0.0

<WormBody>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size
            source: 'images/BodyNew.png'

<WormHead>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos 
            size: self.size
            source: 'images/Head.png'

    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: 0, 0, 1
            origin: self.center
    canvas.after:
        PopMatrix
         
<Apple>
    bgcolor: 1, 1, 1, 1
    size_hint: None, None
    size: [self.sprite_size] * 2
    pos: [x * self.sprite_size for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size
            source: 'images/AppleNew.png'

<HungryWormGame>
    canvas:
        Color
            rgba: 1, 0, 0, self.alpha
        Rectangle
            pos: self.pos
            size: self.size
    
    Label:
        id: header
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, 9 * root.size[1] / 10.2
        text: 'Hungry Worm'
        font_size: 24
        font_name: "Comic"
        

    Button:
        text: "Press to start"
        id: start_button
        pos: (root.width/2.4, root.height / 2)
        size: 150, 50
        size_hint: None, None
        on_release:
            self.disabled = True
            self.opacity = 0
            root.start_game()
        canvas:
            Rectangle
                pos: self.pos
                size: self.size
                source: 'images/Start.png'

    Label:
        id: score
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, (9 * root.size[1] / 10.2) - 50
        text: 'Score: ' + str(root.score)
        font_size: 17
        font_name: "Comic"


    Label:
        id: highscore
        size_hint: None, None
        height: 
        pos: root.size[0] / 15, (9 * root.size[1] / 11) - 50
        text: 'High Score: ' + str(root.high_score)
        font_size: 17
        font_name: "Comic"
